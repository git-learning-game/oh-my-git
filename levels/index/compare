cards = checkout commit-auto

[description]

compare_description_071

[win]

# compare_win_hint_072
git branch --show-current | grep step-by-step

[setup]

echo "@@setup_auto_025@@" > ball
echo "@@setup_auto_026@@" > book
echo "@@setup_auto_027@@" > candle
echo "@@setup_auto_028@@" > smoke_detector

git add .
git commit -m "The beginning"

git branch -M all-at-once

echo "@@setup_auto_029@@" > ball
echo "@@setup_auto_030@@" > book
echo "@@setup_auto_031@@" > candle

git commit -am "The end"

git checkout HEAD^

git checkout -b step-by-step

echo "@@setup_auto_032@@" > ball
git commit -am "The ball rolls towards the book"

echo "@@setup_auto_033@@" > book
git commit -am "The book falls over"

echo "@@setup_auto_034@@" > candle
git commit -am "The book blows out the candle"

git checkout HEAD~3

[win]

# compare_win_hint_073
git show step-by-step:smoke_detector | tail -n 1 | grep -v "absolutely silent"
