filesadd_description_249

[setup]

echo A yellow cozy bed. > bed

[win]

# filesadd_win_hint_251
NUM_FILES="$(ls | wc -l)"
test "$NUM_FILES" -ge 3

# filesadd_win_hint_252
NUM_FILES="$(ls | wc -l)"
